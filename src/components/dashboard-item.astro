---
let title = Astro.props.title;
let currentTime = Astro.props.currentTime;
let lastWeekTime = Astro.props.lastWeekTime;
---

<div class="dashboard-item">
  <div>
    <em>{title}</em><img src="/images/icon-ellipsis.svg" />
  </div>
  <div>
    <span>{currentTime}hrs</span>
    <span>Last Week 
      <span>{lastWeekTime}hrs</span>
    </span>
  </div>
</div>

<style>
  .dashboard-item {
    --spacing: 1.65em;
    
    display: flex;
    flex-flow: column wrap;
    gap: 1em;
    padding: var(--spacing);
    background-color: var(--clr-neutral-300);
    border-radius: var(--radius);
  }

  @media(min-width: 600px) {
    .dashboard-item {
      margin-top: 0;
      flex: 0 0 var(--basis);
    }
  }

  .dashboard-item > div {
    display: flex;
    align-items: center;
    gap: 1em;
    justify-content: space-between;
  }

  .dashboard-item > div:last-child > :first-child {
    font-size: 1.5em;
  }

  .dashboard-item > div:last-child :last-child {
    color: var(--clr-neutral-100)
  }

  @media (min-width: 600px) {
    .dashboard-item > div:last-child {
      flex-flow: column;
      align-items: flex-start;
    }

    .dashboard-item > div:last-child > :first-child {
    font-size: 2.25em;
  }
  }
</style>