---
import EvenColumns from "../layouts/even-columns.astro";
import DashboardItem from "../components/dashboard-item.astro";
---

<div class="dashboard">
  <header>
    <div class="profile">
      <img src="/images/image-jeremy.png" alt="Jeremy's avatar" width="100" />
      <p><b>Report for</b> <em>Jeremy Robson</em></p>
    </div>
    <menu role="list" class="primary-navigation">
      <li><a href="/daily">Daily</a></li>
      <li><a href="/weekly">Weekly</a></li>
      <li><a href="/monthly">Monthly</a></li>
    </menu>
  </header>

  <div class="dashboard-content">
    <EvenColumns>
      <DashboardItem title="Work" currentTime="32" lastWeekTime="36" />
      <DashboardItem title="Play" currentTime="10" lastWeekTime="8" />
      <DashboardItem title="Study" currentTime="4" lastWeekTime="7" />
    </EvenColumns>
    <EvenColumns>
      <DashboardItem title="Exercise" currentTime="4" lastWeekTime="5" />
      <DashboardItem title="Social" currentTime="5" lastWeekTime="10" />
      <DashboardItem title="Self Care" currentTime="2" lastWeekTime="2" />
    </EvenColumns>
  </div>
</div>

<style>
  .dashboard {
    --basis: 200px;

    display: flex;
    flex-flow: column;
    justify-content: center;
    gap: var(--spacing);
  }

  .dashboard > * {
    flex-basis: var(--basis);
  }


  @media (min-width: 600px) {
    .dashboard {
      flex-flow: row;
      gap: var(--spacing);
    }
    .dashboard-content {
      display: flex;
      flex-flow: column;
      gap: var(--spacing);
    }
  }

  header {
    --radius: 1em;
    --padding: 1.5em;
    --spacing: 1em;

    background-color: var(--clr-neutral-300);
    border-radius: var(--radius);
  }

  @media (min-width: 600px) {
   header {
    flex: 0 0 var(--basis);
   } 
  }

  .profile {
    background-color: var(--clr-blue-200);
    padding: var(--padding);
    border-radius: inherit;
    display: flex;
    align-items: center;
    gap: var(--spacing);
  }

  @media (min-width: 600px) {
    .profile {
      flex-flow: column;
    }
  }

  .profile > img {
    border: 3px solid #fff;
    border-radius: 50%;
    width: 100px;
  }

  .profile > p {
    display: flex;
    flex-flow: column wrap;
    font-size: 1.25rem;
  }

  .profile > p > b {
    font-size: 0.7em;
    color: var(--clr-neutral-100);
  }

  .primary-navigation {
    display: flex;
    justify-content: space-between;
    gap: 1ch;
    padding: var(--padding);
  }

  @media (min-width: 600px) {
    .primary-navigation {
      flex-flow: column;
    }
  }
</style>