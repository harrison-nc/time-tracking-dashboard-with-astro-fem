---
import EvenColumns from "../layouts/even-columns.astro";
import DashboardHeader from "../components/dashboard-header.astro";
import DashboardItem from "../components/dashboard-item.astro";
---

<div class="dashboard">
  <DashboardHeader />
  <div class="dashboard-content">
    <EvenColumns>
      <DashboardItem title="Work" currentTime="32" lastWeekTime="36" />
      <DashboardItem title="Play" currentTime="10" lastWeekTime="8" />
      <DashboardItem title="Study" currentTime="4" lastWeekTime="7" />
    </EvenColumns>
    <EvenColumns>
      <DashboardItem title="Exercise" currentTime="4" lastWeekTime="5" />
      <DashboardItem title="Social" currentTime="5" lastWeekTime="10" />
      <DashboardItem title="Self Care" currentTime="2" lastWeekTime="2" />
    </EvenColumns>
  </div>
</div>

<style>
  .dashboard {
    --basis: 200px;

    display: flex;
    flex-flow: column;
    justify-content: center;
    gap: var(--spacing);
  }

  .dashboard > * {
    flex-basis: var(--basis);
  }


  @media (min-width: 600px) {
    .dashboard {
      flex-flow: row;
      gap: var(--spacing);
    }
    .dashboard-content {
      display: flex;
      flex-flow: column;
      gap: var(--spacing);
    }
  }
</style>